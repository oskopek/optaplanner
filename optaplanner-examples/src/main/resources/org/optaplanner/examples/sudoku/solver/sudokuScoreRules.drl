package org.optaplanner.examples.sudoku.solver;
    dialect "java"

import org.optaplanner.core.api.score.buildin.simple.SimpleScoreHolder;
import org.optaplanner.examples.sudoku.domain.Figure;

global SimpleScoreHolder scoreHolder;

// ############################################################################
// Constraints
// ############################################################################

rule "equalFiguresHorizontal"
    when
        Figure($id : id, row != null, $i : rowIndex, $val : value)
        Figure(id > $id, rowIndex == $i, value == $val)
    then
        scoreHolder.addConstraintMatch(kcontext, -1);
end

rule "equalFiguresVertical"
    when
        Figure($id : id, column != null, $i : columnIndex, $val : value)
        Figure(id > $id, columnIndex == $i, value == $val)
    then
        scoreHolder.addConstraintMatch(kcontext, -1);
end

rule "equalFiguresSquare"
    when
        Figure($id : id, square != null, $i : squareIndex, $val : value)
        Figure(id > $id, squareIndex == $i, value == $val)
    then
        scoreHolder.addConstraintMatch(kcontext, -1);
end
